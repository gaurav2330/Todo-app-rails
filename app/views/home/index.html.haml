%h1 Welcome to the Todo App

.container
  - if user_signed_in?
    %p
      Hello,
      = current_user.email
      !
    %p
      = link_to 'View Your Tasks', tasks_path, class: 'btn'
    %p
      = link_to 'Logout', destroy_user_session_path, class: 'btn', data: { method: :delete }
  - else
    %p
      = link_to 'Login', new_user_session_path, class: 'btn'
      or
      = link_to 'Sign Up', new_user_registration_path, class: 'btn'
