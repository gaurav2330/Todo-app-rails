<div class="container" style="max-width: 400px; margin: 0 auto; padding: 20px; border: 1px solid #ddd; border-radius: 10px; background-color: #f9f9f9;">
  <h2 style="text-align: center; margin-bottom: 20px;">Sign Up</h2>

  <%= form_with model: @user, url: registration_path(:user), local: true do |f| %>
    <div class="field" style="margin-bottom: 15px;">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, class: "form-control", style: "width: 100%;" %>
    </div>

    <div class="field" style="margin-bottom: 15px;">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "form-control", style: "width: 100%;" %>
    </div>

    <div class="field" style="margin-bottom: 15px;">
      <%= f.label :password %><br />
      <%= f.password_field :password, class: "form-control", style: "width: 100%;" %>
    </div>

    <div class="field" style="margin-bottom: 15px;">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class: "form-control", style: "width: 100%;" %>
    </div>

    <div style="text-align: center;">
      <%= f.submit "Sign Up", class: "btn btn-primary", style: "width: 100%;" %>
    </div>
  <% end %>
</div>
