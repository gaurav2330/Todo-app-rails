<div class="container" style="max-width: 800px; margin: 40px auto; padding: 20px;">
  <h2 style="text-align: center; margin-bottom: 20px;">Edit Task</h2>

  <%= form_with model: @task, local: true do |f| %>
    <div class="form-group" style="margin-bottom: 20px;">
      <%= f.label :title, "Task Title", class: "form-label" %>
      <%= f.text_field :title, class: "form-control", required: true %>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
      <%= f.label :description, "Task Description", class: "form-label" %>
      <%= f.text_area :description, rows: 3, class: "form-control", required: true %>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
      <%= f.label :status, "Task Status", class: "form-label" %>
      <%= f.select :status, options_for_select(["not_started", "in_progress", "completed"], @task.status), {}, class: "form-control" %>
    </div>

    <div style="text-align: center;">
      <%= f.submit "Update Task", class: "btn btn-primary", style: "padding: 10px 20px;" %>
    </div>
  <% end %>
</div>
