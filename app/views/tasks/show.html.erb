<div class="container" style="max-width: 600px; margin: 20px auto;">
  <h2 style="text-align: center;">Edit Task</h2>
  <%= form_with model: @task, url: task_path(@task), method: :patch, local: true do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :status %>
      <%= f.select :status, options_for_select(["not_started", "in_progress", "completed"], @task.status), class: "form-control" %>
    </div>

    <div style="margin-top: 20px; text-align: center;">
      <%= f.submit "Update Task", class: "btn btn-success" %>
      <%= link_to "Cancel", tasks_path, class: "btn btn-secondary", style: "margin-left: 10px;" %>
    </div>
  <% end %>
</div>
