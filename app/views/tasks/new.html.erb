<h1>New Task</h1>

<%= form_with model: @task, local: true do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, required: true %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :status %>
    <%= f.select :status, options_for_select(["not_started", "in_progress", "completed"], @task.status) %>
  </div>

  <div>
    <%= f.submit "Create Task", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back to Tasks", tasks_path, class: "btn btn-secondary" %>
